<div class="container">
  <h3>請修改您的支出！</h3>
  <form action="/records/{{record._id}}/edit" method="POST">
    <div class="form-group">
      <label for="name">名稱</label>
      <input type="text" class="form-control" name="name" value="{{record.name}}" required>
    </div>
    <div class="form-group">
      <label for="date">日期</label>
      <input type="date" class="form-control" name="date" value="{{record.date}}" required>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">類別</label>
      <select id="category" class="form-control" name="category" required>
        <option disabled>請選擇類別！</option>
        <option value="家居物業" {{#ifEquals record.category '家居物業'}}selected value{{/ifEquals}}>家居物業</option>
        <option value="交通出行" {{#ifEquals record.category '交通出行'}}selected value{{/ifEquals}}>交通出行</option>
        <option value="休閒娛樂" {{#ifEquals record.category '休閒娛樂'}}selected value{{/ifEquals}}>休閒娛樂</option>
        <option value="餐飲食品" {{#ifEquals record.category '餐飲食品'}}selected value{{/ifEquals}}>餐飲食品</option>
        <option value="其他" {{#ifEquals record.category '其他'}}selected value{{/ifEquals}}>其他</option>
      </select>
    </div>
    <div class="form-group">
      <label for="amount">金額</label>
      <input type="text" class="form-control" name="amount" value="{{record.amount}}" required>
    </div>
    <button type="submit" class="btn btn-primary">儲存修改</button>
  </form>
</div>