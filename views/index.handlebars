<div class="container">
  <div class="colunm mx-auto mt-5" style="width: 650px;">
    <select class="form-control border" id="category" name="category" onchange="location = this.value;"
      style="font-size: 22px; background-color: #E0E0E0;">
      <option value="/" style="font-size: 22px;">全部</option>
      <option value="/交通出行" {{#ifEquals params '交通出行'}}selected{{/ifEquals}} style="font-size: 22px;">交通出行
      </option>
      <option value="/餐飲食品" {{#ifEquals params '餐飲食品'}}selected{{/ifEquals}} style="font-size: 22px;">餐飲食品
      </option>
      <option value="r/休閒娛樂" {{#ifEquals params '休閒娛樂'}}selected{{/ifEquals}} style="font-size: 22px;">休閒娛樂
      </option>
      <option value="/家居物業" {{#ifEquals params '家居物業'}}selected{{/ifEquals}} style="font-size: 22px;">家居物業
      </option>
      <option value="/其他" {{#ifEquals params '其他'}}selected{{/ifEquals}} style="font-size: 22px;">其他</option>
    </select>
    <div class="total-amount">
      <h5 class="total-title mt-3" style="font-size: 26px; font-weight: bold">總金額：</h5>
      <h2 class="text-center" style="font-size: 60px; font-weight: bold; color: #FF8F59; font-family: sans-serif;">
        {{totalAmount}}</h2>
    </div>

    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item my-auto" style="list-style-type: none;">
        <div class="row">
          <div class="icon my-auto ml-3" style="width: 55px;">
            <i class="
                        {{#ifEquals this.category '家居物業'}}fas fa-home fa-3x{{/ifEquals}}
                        {{#ifEquals this.category '交通出行'}}fas fa-shuttle-van fa-3x{{/ifEquals}}
                        {{#ifEquals this.category '休閒娛樂'}}fas fa-grin-beam fa-3x{{/ifEquals}}
                        {{#ifEquals this.category '餐飲食品'}}fas fa-utensils fa-3x{{/ifEquals}}
                        {{#ifEquals this.category '其他'}}fas fa-pen fa-3x{{/ifEquals}}
                      " style="color:	#7CB8BB"></i>
          </div>
          <div class="name-date ml-2" style="width: 150px;">
            <div class="content-name" style="font-size: 25px; font-weight: bold;">{{this.name}}</div>
            <div class="date" style="font-size: 18px;">{{this.date}}</div>
          </div>
          <div class="amount my-auto ml-5" style="font-size: 20px; font-weight: bold">
            $ {{{this.amount}}}
          </div>

          <div class="button my-auto border ml-auto mr-3 border">
            <a href="./records/{{this._id}}/edit" style="text-decoration: none;">
              <button type="button" class="btn btn-success" style="font-size: 18px; font-weight: bold">修改</button>
            </a>
            <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline">
              <button type="submit" class="btn btn-danger" style="font-size: 18px; font-weight: bold">刪除</a>
            </form>
          </div>
      </li>
      {{/each}}
    </ul>
    <div class="create my-auto mx-auto col-3 pt-3" style="width: 800px;">
      <a href="/records/new" class="btn btn-warning" style="font-size: 18px; font-weight: bold; width: 130px;">新增支出</a>
    </div>
  </div>
</div>
</div>




